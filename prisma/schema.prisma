generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  activityId BigInt
  activity   Activity @relation(fields: [activityId], references: [id])
}

model Team {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Activity {
  id       BigInt                 @unique
  title    String
  datetime  String
  distance Float?
  movingTime Int?
  delegueId Int?
  description String?
  gpxUrl  String?
  imageUrl imageUrl[]
  users    ActivitiesOnUsers[]
  comments Comment[]
}

model User {
  stravaId   Int                 @unique
  firstName  String
  lastName   String
  email      String?             @unique
  password   String
  teamId     Int?
  imageUrl   String?
  isAdmin    Boolean?           @default(false)
  activities ActivitiesOnUsers[]
  team       Team?               @relation(fields: [teamId], references: [id])
  accessToken String?
}

model imageUrl {
  id         Int      @id @default(autoincrement())
  url        String
  activityId BigInt
  activity   Activity @relation(fields: [activityId], references: [id])
}

model ActivitiesOnUsers {
  userId     Int
  activityId BigInt
  activity   Activity @relation(fields: [activityId], references: [id])
  user       User     @relation(fields: [userId], references: [stravaId])

  @@id([userId, activityId])
}
